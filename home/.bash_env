# ~/.bash_env â€” environment variables only

# Always point BASH_ENV to this file so subshells and scripts get it too
export BASH_ENV="$HOME/.bash_env"

# Path to your dotfiles repo
export DOTFILES="$HOME/.dotfiles"

# Path modifications
export PATH="$HOME/bin:$PATH"
export PATH="/home/eyong/repos/ninja/build-cmake:$PATH"

# Editor and terminal defaults
export EDITOR=nvim
export VISUAL=nvim
export TMUX_CONF="$HOME/.config/tmux/tmux.conf"
# Homebrew environment (safe for non-interactive shells too)
if [ -f /home/linuxbrew/.linuxbrew/bin/brew ]; then
  eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
  export HOMEBREW_NO_ENV_HINTS=1
fi
